@model List<DeevFolio.Models.TblService>
<section id="service" class="services-mf route">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <div class="title-box text-center">
                    <h3 class="title-a">
                        Hizmetlerim
                    </h3>
                    @*<p class="subtitle-a">
                        Lorem ipsum, dolor sit amet consectetur adipisicing elit.
                    </p>*@
                    <div class="line-mf"></div>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4">
                    <div class="service-box">
                        <div class="service-ico">
                            <span class="ico-circle"><img src="@item.ServiceImageUrl" alt="" class="img-fluid" style="margin-top:-10px" ></span>
                        </div>
                        <div class="service-content">
                            <h2 class="s-title">@item.ServiceTitle</h2>
                            <p class="s-description text-center">
                            @item.Description
                            </p>
                        </div>
                    </div>
                </div>
            }

       
        </div>
    </div>
</section>
