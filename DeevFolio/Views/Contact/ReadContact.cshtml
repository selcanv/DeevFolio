@model DeevFolio.Models.TblContact
@{
    ViewBag.Title = "ReadContact";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Gelen Kutusu</h2>

<form method="post">
    <label>Adı Soyadı</label>
    @Html.TextBoxFor(x => x.NameSurname, new { @class = "form-control" })
    <br />
    <label>Email</label>
    @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
    <br />
    <label>Konu</label>
    @Html.TextBoxFor(x => x.Subject, new { @class = "form-control" })
    <br />
    <label>Tarih</label>
    @Html.TextBoxFor(x => x.SendMessageDate, new { @class = "form-control" })
    <br />
    <label>Mesaj</label>
    @Html.TextAreaFor(x => x.Message, new { @class = "form-control" })
    <br />
    <button class="btn btn-info">Çık</button>

</form>