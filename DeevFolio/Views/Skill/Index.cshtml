@model List<DeevFolio.Models.TblSkill>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Yetenekler Listesi</h2>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Yetenek Başlığı</th>
        <th>Yetenek Oranı</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.SkillID</td>
            <td>@x.SkillTitle</td>
            <td>@x.SkillValue</td>
            <td><a href="/Skill/DeleteSkill/@x.SkillID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Skill/UpdateSkill/@x.SkillID" class="btn btn-success">Güncelle</a></td>
        </tr>

    }
</table>
<a href="/Skill/CreateSkill/" class="btn btn-info">Yeni Yetenek Girişi</a>