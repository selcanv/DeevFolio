@model List<DeevFolio.Models.TblAddress>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Adres Listesi</h2>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Açıklama</th>
        <th>Lokasyon</th>
        <th>Telefon</th>
        <th>Email</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.AddressID</td>
            <td>@item.Description</td>
            <td>@item.Location</td>
            <td>@item.PhoneNumber</td>
            <td>@item.Email</td>
            <td><a href="/Address/DeleteAddress/@item.AddressID/" class="btn btn-warning">Sil</a></td>
            <td><a href="/Address/UpdateAddress/@item.AddressID/" class="btn btn-success">Güncelle</a></td>
        </tr>

    }
</table>

<a href="/Address/CreateAddress" class="btn btn-info">Yeni Adres Girişi</a>